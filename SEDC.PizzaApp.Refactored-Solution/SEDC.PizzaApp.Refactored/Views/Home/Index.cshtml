@model HomeViewModel

@{ViewBag.Title = "Welcome"; }

<div class="jumbotron">
    <h1>Welcome to the Pizza App</h1>
    <p>The best Application for ordering pizza in this town</p>
    <p>
        <h3>Order your pizza NOW</h3>
        @using(Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-danger" type="submit">Order</button>
                        </span>
                        @Html.TextBoxFor(x =>x.NumberOfPizzas, new { @class = "form-control"})
                    </div>
                </div>
            </div>
        }
    </p>
</div>